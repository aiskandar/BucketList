<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"><!--
         Base application theme, dependent on API level. This theme is replaced 
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!--
            "/Users/sien/adt-bundle-mac-x86_64-20130729/sdk/platforms/android-18/data/res/values/styles.xml"
             Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here.
        -->
		<item name="android:actionBarStyle">@style/AppBaseTheme.ActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/AppBaseTheme.ActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/AppBaseTheme.ActionBarTabTextStyle</item>
        <item name="android:itemTextAppearance">@style/AppBaseTheme.MenuTextStyle</item>
        <item name="android:alertDialogStyle">@style/AppBaseTheme.AlertDialogStyle</item>
    </style>

    <style name="AppBaseTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleStyle</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubtitleStyle</item>
    </style>
    
    <style name="AppBaseTheme.ActionBarTabStyle" parent="@android:style/Widget.ActionBar.TabView">
    </style>
        
    <style name="AppBaseTheme.ActionBarTabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
		<item name="android:textColor">@color/darkergrey</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AppBaseTheme.MenuTextStyle" parent="android:style/@android:style/TextAppearance.Widget.IconMenu.Item">
	    <item name="android:textColor">@color/darkergrey</item>	   
	    <item name="android:textSize">14sp</item>
	</style>
    
    <style name="MyActionBarTitleStyle">
    	<item name="android:textColor">@color/darkgrey</item>
    	<item name="android:textSize">16sp</item>
    </style>
    
    <style name="MyActionBarSubtitleStyle">
    	<item name="android:textColor">@color/darkgrey</item>
    	<item name="android:textSize">12sp</item>
    </style>
    
    <style name="AppBaseTheme.AlertDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
    	<item name="android:textColor">@color/darkgrey</item>
    	<item name="android:textSize">8sp</item>
    </style>    
    
    
<!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--
             All customizations that are NOT specific to a particular API-level 
			can go here.
        -->

    </style>

</resources>